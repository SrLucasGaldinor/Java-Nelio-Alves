package entities;

public class Triangle {
	public double a;
	public double b;
	public double c;
	public double perimeter;
	public double area;

	public void calculatePerimeter() {
		perimeter = a + b + c;
	}

	public void calculateAreaOfTheTriangle() {
		double semiPerimeter = perimeter / 2.0;
		double semiArea = semiPerimeter * (semiPerimeter - a) * (semiPerimeter - b) * (semiPerimeter - c);
		System.out.println(semiArea);
		area = Math.sqrt(semiArea);
	}
}
